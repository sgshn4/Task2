<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".RocketInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    app:srcCompat="@drawable/baseline_share_24" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/rocketImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:srcCompat="@drawable/crs" />

        <TextView
            android:id="@+id/rocket_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="ROCKET"
            android:textColor="@color/tab_active"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rocket_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:text="Falcon 1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/launch_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="LAUNCH DATE"
            android:textColor="@color/tab_active"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/launch_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:text="01-03-2019"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/launch_site_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="LAUNCH SITE"
            android:textColor="@color/tab_active"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/launch_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:text="CCAFS SLC 40"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/launch_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="LAUNCH STATUS"
            android:textColor="@color/tab_active"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/launch_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:text="Success"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="DETAILS"
            android:textColor="@color/tab_active"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:text="Last launch of the original Falcon 9 v1.0 \nlaunch vehicle"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rocket_summary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="ROCKET SUMMARY"
            android:textColor="@color/tab_active"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rocket_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:text="Falcon 9"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="TYPE"
            android:textColor="@color/tab_active"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:text="v1.0"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/first_stage_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="FIRST STAGE"
                    android:textColor="@color/tab_active"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/first_stage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:text="Cores: 4"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/second_stage_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:paddingTop="4dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="4dp"
                    android:text="SECOND STAGE"
                    android:textColor="@color/tab_active"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/second_stage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:paddingTop="4dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:text="Payloads: 150kg"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/youtube_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="YOUTUBE"
                    android:textColor="@color/tab_active"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/rounded_youtube"
                    android:gravity="center"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/youtube"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/vector" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/reddit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="right"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="REDDIT"
                    android:textColor="@color/tab_active"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_reddit"
                    android:gravity="center"
                    android:padding="4dp"
                    android:paddingRight="32dp">

                    <ImageView
                        android:id="@+id/reddit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/mdi_child_care" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/sneak_peak_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"
            android:text="SNEAK PEAK"
            android:textColor="@color/tab_active"
            android:textSize="12sp" />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="360dp"
                    android:layout_height="480dp"
                    android:src="@drawable/rectangle_2"/>
                <ImageView
                    android:layout_width="360dp"
                    android:layout_height="480dp"
                    android:src="@drawable/rectangle_2"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>